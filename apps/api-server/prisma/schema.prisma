generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  photo     String?
  timezone  String
  password  String
  createdAt DateTime @default(now())
  groups    Group[]  @relation("UserGroups")
  checkIns  CheckIn[]
}

model Group {
  id           Int      @id @default(autoincrement())
  name         String
  donationAmt  Float
  duration     Int
  adminId      Int
  users        User[]   @relation("UserGroups")
  checkIns     CheckIn[]
}

model CheckIn {
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id])
  group     Group?   @relation(fields: [groupId], references: [id])
  userId    Int?
  groupId   Int?
  timestamp DateTime
  photo     String?
  location  String?
  method    String
}