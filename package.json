{
  "name": "first-light",
  "version": "1.0.0",
  "description": "Wake-up challenge application with social accountability",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "cd apps/api-server && npm run dev",
    "dev:web": "cd apps/web-client && npm run dev",
    "dev:electron": "cd apps/electron-app && npm run dev",
    "build": "npm run build:api && npm run build:web && npm run build:electron",
    "build:api": "cd apps/api-server && npm run build",
    "build:web": "cd apps/web-client && npm run build",
    "build:electron": "cd apps/electron-app && npm run build",
    "install:all": "npm install && cd apps/api-server && npm install && cd ../web-client && npm install && cd ../electron-app && npm install",
    "clean": "rm -rf apps/*/dist apps/*/node_modules node_modules",
    "docker:build": "cd docker && docker compose build",
    "docker:up": "cd docker && docker compose up",
    "docker:down": "cd docker && docker compose down"
  },
  "keywords": [
    "wake-up",
    "challenge",
    "social",
    "accountability",
    "fitness",
    "health"
  ],
  "author": "",
  "license": "ISC"
}